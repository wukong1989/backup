{
    "editor.tabSize": 2,
    "editor.renderWhitespace": "none",
    "editor.minimap.enabled": false,
    "security.workspace.trust.untrustedFiles": "open",
    "editor.lineHeight": 18,
    "editor.fontFamily": "'Courier New', Consolas, monospace",
    "editor.fontSize": 12,
    "workbench.editor.wrapTabs": true,
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "editor.wordWrap": "on",
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.insertModeKeyBindings": [
        {
        "before": ["<C-e>"],
        "after": ["<Esc>"]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<C-z>"],
            "after": ["u"],
        },
        {
            "before": ["h"],
            "after": ["i"]
        },
        {
            "before": ["j"],
            "after": ["h"]
        },
        {
            "before": ["k"],
            "after": ["j"]
        },
        {
            "before": ["i"],
            "after": ["k"]
        }
    ],

    "vim.normalModeKeyBindings": [
        {
            "before": [":"],
            "commands": [
                "workbench.action.showCommands",
            ],
            "silent": true
        },
        {
            "before": ["}"],
            "after": ["w"]
        },
        {
            "before": ["{"],
            "after": ["b"]
        },
        {
            "before": ["<C-l>"],
            "after": ["g", "$"]
        },
        {
            "before": ["<C-j>"],
            "after": ["g", "^"]
        },
        {
            "before": ["<C-v>"],
            "after": ["p"]
        }
    ],
    "vim.leader": ",",
    "vim.handleKeys": {
        "<C-a>": false, // vscode select all
        "<C-r>": false, // vim: redo, replaced for Q run lines
        "<C-f>": false, // vscode find
        "<C-x>": false, // vscode cut
        // "<C-c>": false, // vscode copy
        // "<C-v>": false, // vscode paste
        // "<C-z>": false, // vscode undo
        "<C-y>": false, // vscode redo
        "<C-t>": false, // vscode new module
        "<C-w>": false // vscode close file
    },
    "vim.commandLineModeKeyBindings": [

    ],
    "vim.operatorPendingModeKeyBindings": [
        {
            "before": ["{"],
            "after": ["b"]
        },
        {
            "before": ["}"],
            "after": ["w"]
        }, 
        {
            "before": ["<C-l>"],
            "after": ["$"]
        },
        {
            "before": ["<C-j>"],
            "after": ["^"]
        }
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": [
                ">"
            ],
            "commands": [
                "editor.action.indentLines"
            ]
        },
        {   
            "before": [
                "<"
            ],
            "commands": [
                "editor.action.outdentLines"
            ]
        },
        {
            "before": ["<C-c>"],
            "after": ["y"]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": ["h"],
            "after": ["i"]
        },
        {
            "before": ["j"],
            "after": ["h"]
        },
        {
            "before": ["k"],
            "after": ["j"]
        },
        {
            "before": ["i"],
            "after": ["k"]
        }
    ],
    "editor.lineNumbers": "relative"
}
